<div class="container">
  <div class="row">
    <h3>Liste des commandes</h3>
    <div class="status-title">
      <p>En attente(s)</p>
    </div>
    <% @orders_validated.each do |order| %>
      <%= render 'order_card', {order: order} %>
    <% end %>
    <div class="status-title">
      <p>En préparation</p>
    </div>
    <% @orders_in_preparation.each do |order| %>
      <%= render 'order_card', {order: order} %>
    <% end %>
    <div class="status-title">
      <p>Prête(s)</p>
    </div>
    <% @orders_ready.each do |order| %>
      <%= render 'order_card', {order: order} %>
    <% end %>
    <div class="status-title">
      <p>Annulée(s)</p>
    </div>
    <% @orders_ready.each do |order| %>
      <%= render 'order_card', {order: order} %>
    <% end %>
  </div>
</div>
